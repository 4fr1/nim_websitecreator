#? stdtmpl | standard
#
#template `%`(idx: untyped): untyped =
#  row[idx]
#end template
#
#
#proc genNewBlog(c: var TData): string =
  #result = ""
<style>
  .CodeMirror {
    border: 1px solid #eee;
    height: auto!important;
  }
</style>
<div id="newblogData">
  <h1>New blog post</h1>
  <form method="post" action="/blogpagenew/save">
    <div>
      <label>Name</label>
      <input name="name" required />
    </div>
    <div>
      <label>URL <span style="font-size: 90%;"><i>(eg. 2018/11/name)</i></span></label>
      <input name="url" required />
    </div>
    <div>
      <label>Status</label>
      <select name="status" class="form-control form-control-sm">
        <option value="0">Development</option>
        <option value="1">Private</option>
        <option value="2">Public</option>
      </select>
    </div>
    <div>
      <button type="submit" class="btn btn-success newblogSave">Save</button>
      <button type="button" class="btn btn-secondary newblogOptions">Options</button>
    </div>
    <div class="newblogOptions">
      <hr>
      
      <h5>HTML</h5>
      <div class="container-fluid">
        <div class="row">
          <div class="col-12 col-md-4">
            <div>HTML &lt;head&gt;</div>
            <input name="standardhead" type="checkbox" class="form-check-input" checked> <div>Use standard head</div> <i style="font-size: 90%;">(uncheck to use custom page header below)</i>
            <textarea name="head" class="form-control" ></textarea>
          </div>
          <div class="col-12 col-md-4">
            <div>HTML &lt;navbar&gt;</div>
            <input name="standardnavbar" type="checkbox" class="form-check-input" checked> <div>Use standard header</div> <i style="font-size: 90%;">(uncheck to use custom page header below)</i>
            <textarea name="navbar" class="form-control" ></textarea>
          </div>
          <div class="col-12 col-md-4">
            <div>HTML &lt;footer&gt;</div>
            <input name="standardfooter" type="checkbox" class="form-check-input" checked> <div>Use standard footer</div> <i style="font-size: 90%;">(uncheck to use custom page footer below)</i>
            <textarea name="footer" class="form-control" ></textarea>
          </div>
        </div>
      </div>

      <hr>
      
      <div>
        <h5>Images</h5>
        <i>Upload a <a href="/files">new file</a></i>
        <div id="imagecontainer"></div>
      </div>

    </div>


    <hr>
    <div>
     <div>Blog text:</div>
      <textarea id="summernote" name="editordata"></textarea>
    </div>
  </form>      
</div>

#end proc