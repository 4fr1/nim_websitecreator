<div id="pageData">
  <form method="post" action="/pagenew/save">

    <div id="pageHeader">
      <h1>New page</h1>

      <div class="field">
        <div class="control">
          <label class="label">Name</label>
          <input class="input" type="text" id="name" name="name" minlength="2" maxlength="128" placeholder="Type Name for new Page" required >
        </div>
      </div>

      <div class="field">
        <div class="control">
          <label class="label">URL</label>
          <input class="input" type="url" id="url" name="url" minlength="2" maxlength="128" placeholder="eg. portfolio" required >
        </div>
      </div>

      <div class="field">
        <label class="label">Status</label>
        <div class="control select">
          <select id="status" name="status" class="form-control form-control-sm" required >
            <option disabled selected >Choose 1 Option</option>
            <option value="0">Development Draft</option>
            <option value="1">Private</option>
            <option value="2">Public</option>
          </select>
        </div>
      </div>

        <div>
          <button type="submit" class="btn btn-success newpageSave button is-success">Save</button>
          <button type="button" class="btn btn-secondary pageOptions button">Options</button>
        </div>
      </div>
      <div class="pageOptions" style="display: block;">

        ${genPageOptions(c, true, false, false, "", "1", "1", "1")}

    </div>

  </form>
</div>

${genPageEditorImport(c, true)}

#end proc
