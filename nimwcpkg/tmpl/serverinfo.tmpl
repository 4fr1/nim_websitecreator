<table border=1 class="table is-bordered is-striped is-hoverable is-fullwidth">
  <thead>
    <tr>
      <th style="width: 200px;">Name</th>
      <th>Value</th>
    </tr>
  </thead>
  <tfoot>
    <tr>
      <th>Name</th>
      <th>Value</th>
    </tr>
  </tfoot>
  <tbody>
  <tr>
    <td> <b>System</b> </td>            <td> $uname </td>
